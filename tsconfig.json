{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "dom",
      "es5"
    ]
  },
  "include": [
    "node_modules/tns-core-modules/tns-core-modules.d.ts",
    "./src/*.ts"
  ],
  "exclude": [
    "./src/*.d.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": true,
  "atom": {
    "rewriteTsconfig": true
  }
}
